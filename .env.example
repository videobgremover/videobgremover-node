# VideoBGRemover API Configuration
VIDEOBGREMOVER_API_KEY=vbr_your_api_key_here

# Environment (local, staging, prod)
VIDEOBGREMOVER_ENV=local

# API Base URLs
VIDEOBGREMOVER_LOCAL_BASE_URL=http://localhost:3000/api
VIDEOBGREMOVER_STAGING_BASE_URL=https://staging-api.videobgremover.com
VIDEOBGREMOVER_PROD_BASE_URL=https://api.videobgremover.com

# Testing Configuration
TEST_VIDEO_URL=https://example.com/test-video.mp4
TEST_BACKGROUND_IMAGE=test_assets/background_image.png
TEST_BACKGROUND_VIDEO=test_assets/background_video.mp4

# FFmpeg Configuration (optional)
FFMPEG_PATH=/usr/local/bin/ffmpeg
FFPROBE_PATH=/usr/local/bin/ffprobe

# Development
DEBUG=false
LOG_LEVEL=info
